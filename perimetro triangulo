//Triangulo.h

#pragma once
class Triangulo
{
private:
	float lado1, lado2, lado3;
public:
	Triangulo(float _lado1,float _lado2,float _lado3);
	~Triangulo(void);

	float perimetro(float _lado1,float _lado2,float _lado3);
};


//Triangulo.cpp 

 #include "StdAfx.h"
 #include "Triangulo.h"

Triangulo::Triangulo(float _lado1,float _lado2,float _lado3)
{
	lado1=_lado1;
	lado2=_lado2;
	lado3=_lado3;
}

Triangulo::~Triangulo(void)
{
}

float Triangulo::perimetro(float _lado1,float _lado2,float _lado3)
{
	float p;
	p=_lado1 + _lado2 + _lado3;
	return p;
}


//Ejemplotriangulo.cpp (programa pricipal)

#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "Triangulo.h"

using namespace std;
void main()
{
	Triangulo t1(6,7,8);
	cout<<"El perimetro del triangulo es: "<<t1.perimetro(2,4,6);	
  getch();
}
